<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_plan"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plan_edge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/ll_plan_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">
                <com.abition.self.uielement.CircleImageView
                    android:id="@+id/cv_plan_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/spring"/>
                <TextView
                    android:id="@+id/tv_plan_name"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gym"
                    android:textSize="21dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/ll_plan_steak"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <TextView
                    android:id="@+id/tv_plan_steak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="72sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="12dp"
                    android:text="day(s)"
                    android:gravity="center"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="12dp"
                    android:textStyle="italic"
                    android:textColor="#ff898989"
                    android:visibility="gone"/>
            </FrameLayout>

            <com.abition.self.uielement.SeparatorImageView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_check"
                    android:layout_gravity="center"
                    android:text="check"
                    android:textColor="#fff"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_bg"
                    android:scaleType="centerInside"
                    android:backgroundTint="#009688"/>

            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>